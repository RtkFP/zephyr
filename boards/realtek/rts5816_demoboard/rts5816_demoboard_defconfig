# enable clocks
CONFIG_CLOCK_CONTROL=y

# enable reset
CONFIG_RESET=y

# enable regulator driver
CONFIG_REGULATOR=y

# enable serial console
CONFIG_SERIAL=y
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# enable pin controller
CONFIG_PINCTRL=y

# enable watchdog
CONFIG_WATCHDOG=y
CONFIG_WDT_DISABLE_AT_BOOT=y

# enable entropy
CONFIG_ENTROPY_GENERATOR=y
